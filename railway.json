{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "providers": ["php"],
      "phases": {
        "setup": {
          "nixPkgs": ["php83", "php83Packages.composer", "apacheHttpd"]
        },
        "install": {
          "cmd": "composer install --no-dev --optimize-autoloader"
        },
        "build": {
          "cmd": "sed -i 's|DocumentRoot /var/www/html|DocumentRoot /app/public|' /etc/apache2/sites-available/000-default.conf && a2enmod rewrite && chmod -R 775 writable/"
        }
      }
    },
    "deploy": {
      "startCommand": "apache2-foreground -DFOREGROUND -k start -f /etc/apache2/apache2.conf",
      "healthcheckPath": "/"
    }
  }
}
